{% block javascripts %}
    <script type="text/javascript">
        let togg1 = document.getElementById("button-hidden");
        let p1 = document.getElementById("part_one");
        let p2 = document.getElementById("part_two");
        let t1 = document.getElementById("title_one");
        let t2 = document.getElementById("title_two");


        function togg(){
            if(getComputedStyle(p1).display != "none"){
                p1.style.display = "none";
                p2.style.display = "block";
                t1.style.display = "none";
                t2.style.display = "block";
            } else {
                //Au cas où on rajoute un retour en arrière
                p1.style.display = "block";
                p2.style.display = "none";
                t1.style.display = "block";
                t2.style.display = "none";
            }
        };
        togg1.onclick = togg;
    </script>
