{% extends 'baseAdmin.html.twig' %}


{% block body %}
   
    <h2>Modifier les données d'un utilisateur</h2>
    
     <form method="post">
        <p>
        <label for="nom"> <strong>Nom<span style="color: #ff0000;">*</span> :</strong>  </label> <input id="nom" name="nom" size="28" value="{{user.surname}}" type="text" /> 
