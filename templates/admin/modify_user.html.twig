        <label for="telephone"><strong>Téléphone<span style="color: #ff0000;">*</span> :</label></strong> <input id="telephone" name="telephone" size="27" type="text" value="{{user.phone}}"/><br /><br />  
        <label for="mail"> <strong>Email <span style="color: #ff0000;">*</span> : </strong><br /> </label><input id="email" name="email" size="81" type="text" value="{{user.email}}"/>
        </p>
        <input type="submit" value="Envoyer"/>
        
    </form>

{% endblock %}